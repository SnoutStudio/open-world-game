#Test Game

import time,sys
import random
import constants

def print_slow(str):
    for letter in str:
        sys.stdout.write(letter)
        sys.stdout.flush()
        time.sleep(0.1)

Alive = True

def startGame(): 
    help_information()

def help_information():
    print_slow("\n")
    print_slow("\n")
    print_slow("Tips and Tricks...")
    print_slow("\n")
    print_slow("\n")
    print_slow("Hunger - Your hunger must be kept at zero! If it exceeds 100 you will die.")
    print_slow("\n")
    print_slow("\n")
    print_slow("Thirst - Your thirst must be kept at zero! If it exceeds 100 you will die.")
    print_slow("\n")
    print_slow("\n")
    print_slow("Health - Your health will be decreased when hit! If it decreases to 0 you will die.")
    print_slow("\n")
    print_slow("\n")
    print_slow("Reputation - This game has a reputation system, being rude will lose reputation and storekeepers won't sell to you.")
    print_slow("You can increase damaged reputation by helping others and slaying monsters.")
    print_slow("\n")
    print_slow("\n")
    print_slow("Gold - Get gold from killing monsters and claiming bounties, you can use gold to buy items and fast travel.")
    print_slow("\n")
    print_slow("\n")
    print_slow("Exploration - The higher your exploration the shorter time it takes to travel!")
    print_slow("\n")
    print_slow("\n")
    print_slow("Attack - The higher your attack the more damage you do to enemies!")
    print_slow("\n")
    print_slow("\n")
    print_slow("Ready to continue?")
    print_slow("\n")
    print_slow("\n")
    print_slow("Y. Yes")
    print_slow("\n")
    print_slow("\n")
    ready_continue = input("Choice: ")

    if ready_continue.upper() == "Y":
        game_introduction()

def game_introduction():
    print_slow("\n")
    print_slow("\n")
    
    print_slow("Friendly Innkeeper - Hello traveller! Welcome to my inn, you can use it as a waypoint to get to other cities and towns")
    print_slow("and even hire sailors to take you accross the great sea!")
    print_slow("\n")
    print_slow("\n")
    print_slow("Here you can also buy full meals that will sustain you better than items purchased from that blasted grocer's...")
    print_slow("\n")
    print_slow("\n")
    print_slow("Before I serve you may I dare to ask your name?")
    print_slow("\n")
    print_slow("\n")
    print_slow("Be Friendly. F")
    print_slow("Be Rude. R")
    print_slow("\n")
    print_slow("\n")
    ask_name = input("Choice: ")

    if ask_name.upper() == "F":
        print_slow("\n")
        print_slow("\n")
        print_slow("My name is...")
        print_slow("\n")
        print_slow("\n")
        name = input("Your name: ")
        print_slow("\n")
        print_slow("\n")
        print_slow("Nice to meet you " + name + ", you're definitely not from these parts but it's a pleasure to welcome you!")

    if ask_name.upper() == "R":
        print_slow("\n")
        print_slow("\n")
        print_slow("You - That is my own business, not yours.")
        print_slow("\n")
        print_slow("\n")
        print_slow("Friendly Innkeeper - Oh, my apologies dear man, I did not mean any offense...")
        print_slow("\n")
        print_slow("\n")
        constants.reputation += 10
        print_slow("You have damaged your reputation! Your reputation is now at", constants.reputation, ", if it exceeds 100 shopkeeps will refuse to deal with you!")

    time.sleep(3)
    print_slow("\n")
    print_slow("\n")
    print_slow("Well... er... as I was saying, you can view items and routes here, weapons and armour are upstairs as well as the monster bounty posters.")

    innkeep_choices()

def fast_travel():
    print_slow("\n")
    print_slow("\n")
    print_slow(" - FAST TRAVEL - ")
    print_slow("\n")
    print_slow("\n")
    print_slow("Travel to:")
    print_slow("\n")
    print_slow("\n")
    if constants.atTheCapital == False:
        print_slow("1. The Capital - 5 Gold")
    print_slow("2. The Establishment - 5 Gold")
    print_slow("3. Blaviken - 5 Gold")
    print_slow("4. Rivermoor - 10 Gold")
    print_slow("5. Swampland Plains - 10 Gold")
    if constants.atTheDunes == False:
        print_slow("6. The Dunes - 12 Gold")
    print_slow("7. Salt Wave Harbour - 15 Gold")
    print_slow("\n")
    print_slow("\n")
    print_slow("B. Back")
    print_slow("\n")
    print_slow("\n")
    print_slow("You have", constants.gold, "gold.")
    print_slow("\n")
    print_slow("\n")
    fast_travel_choices = input("Choice: ")

    if fast_travel_choices.upper() == "1":
        if constants.gold >= 5:
            print_slow("\n")
            print_slow("\n")
            print_slow("You - Take me to The Capital.")
            print_slow("\n")
            print_slow("\n")
            print_slow("Friendly Innkeep - Sure thing, that'll be 5 Gold.")
            print_slow("\n")
            print_slow("\n")
            constants.gold -= 5
            print_slow("You now have", constants.gold, "gold.")
            constants.atTheCapital = True
            constants.atTheDunes = False
            print_slow("\n")
            print_slow("\n")
            print_slow("Travelling to The Capital...")
            print_slow("\n")
            print_slow("\n")
            time.sleep(2)
            print_slow("...")
            time.sleep(2)
            print_slow("\n")
            print_slow("\n")
            print_slow("Arrived...")
            time.sleep(2)
            the_capital()
        elif constants.gold < 5:
            print_slow("\n")
            print_slow("\n")
            print_slow("You - Take me to The Capital.")
            print_slow("\n")
            print_slow("\n")
            print_slow("Friendly Innkeep - Sorry mister, you're", 5 - constants.gold, "gold short. You can earn gold by claiming the monster bounties upstairs.")
            fast_travel()

    if fast_travel_choices.upper() == "2":
        if constants.gold >= 5:
