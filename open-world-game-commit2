def go_upstairs():
    print_slow("\n")
    print_slow("\n")
    print_slow(" - Weapons - ")
    print_slow("\n")
    print_slow("\n")
    print_slow(" - Armour - ")
    print_slow("\n")
    print_slow("\n")
    print_slow(" - Monster Bounties - ")
    print_slow("\n")
    print_slow("\n")
    print_slow("Track:")
    if constants.TrackingNorthernSlyder_dunes == False:
        print_slow("\n")
        print_slow("\n")
        print_slow("1. 200 Gold Reward - DEAD - Northern Slythern, last seen near The Dunes.")
        print_slow("\n")
        print_slow("\n")
        print_slow("B. Back")
        print_slow("\n")
        print_slow("\n")
        track_monster = input("Choice: ")

    if track_monster.upper() == "1":
        print_slow("\n")
        print_slow("\n")
        print_slow("You have tracked this bounty, travel to The Dunes to find it.")
        constants.TrackingNorthernSlyder_dunes = True
        go_upstairs()

    if track_monster.upper() == "B":
        innkeep_choices()

def innkeep_choices():
    print_slow("\n")
    print_slow("\n")
    print_slow("You have", constants.gold, "gold.")
    print_slow("\n")
    print_slow("\n")
    print_slow("Actions:")
    print_slow("\n")
    print_slow("\n")
    print_slow("F. Fast Travel")
    print_slow("B. Buy Items")
    print_slow("U. Go Upstairs")
    print_slow("E. Exit Store")
    print_slow("R. Rob Store")
    if constants.KilledNorthernSlythern == True:
        print_slow("\n")
        print_slow("\n")
        print_slow("1. Claim Northern Slythern Bounty")
        print_slow("\n")
        print_slow("\n")    
    inside_innkeep_choices = input("Choice: ")

    if inside_innkeep_choices.upper() == "F":
        print_slow("\n")
        print_slow("\n")
        print_slow("Friendly Innkeep - Can't be bothered to get around on foot eh? Have a look at our options...")
        fast_travel()

    elif inside_innkeep_choices.upper() == "B":
        print_slow("\n")
        print_slow("\n")
        print_slow("Friendly Innkeep - Take a look at our items, the weapons and armour are upstairs.")
        buy_inn_items()

    elif inside_innkeep_choices.upper() == "U":
        print_slow("\n")
        print_slow("\n")
        print_slow("We've got a fine selection of weapons and armour up there, take a look around...")
        go_upstairs()

    elif inside_innkeep_choices.upper() == "E":
        print_slow("\n")
        print_slow("\n")
        if constants.atTheCapital == True:
            print_slow("Friendly Innkeep")
            the_capital()

    elif inside_innkeep_choices.upper() == "R":
        print_slow("\n")
        print_slow("\n")

    elif inside_innkeep_choices.upper() == "1":
        constants.KilledNorthernSlythern = False
        print_slow("\n")
        print_slow("\n")
        print_slow("Friendly Innkeep - Thank you for ridding us of that Northern Slythern, it was a troublesome beast. Here is your gold. You've earned it.")
        constants.gold += 200
        print_slow("\n")
        print_slow("\n")
        print_slow("You earned 200 gold!")
        innkeep_choices()

