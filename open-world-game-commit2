if Alive == True:
    print_slow("GAME TITLE")
    time.sleep(2)
    print_slow("\n")
    print_slow("\n")
    print_slow("P. Play")
    print_slow("Q. Quit")
    print_slow("\n")
    print_slow("\n")
    play_game = input("Choice: ")

    if play_game.upper() == "P":
        startGame()

    elif play_game.upper() == "Q":
        Alive = False

