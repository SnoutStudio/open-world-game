def the_dunes():
    constants.atTheCapital = False
    constants.atTheDunes = True
    print_slow("\n")
    print_slow("\n")
    print_slow(" - THE DUNES - ")
    print_slow("\n")
    print_slow("\n")
    print_slow("1. Visit Inn")
    print_slow("2. Visit Grocers")
    print_slow("3. Visit Wizard's Tower")
    if constants.TrackingNorthernSlyder_dunes == True:
        print_slow("\n")
        print_slow("\n")
        print_slow("4. Find Northern Slythern")
        print_slow("\n")
        print_slow("\n")
    the_dunes_choices = input("Choice: ")

    if the_dunes_choices.upper() == "1":
        innkeep_choices()

    if the_dunes_choices.upper() == "2":
        grocer_choices()

    if the_dunes_choices.upper() == "3":
        print_slow("\n")
        print_slow("\n")

    if the_dunes_choices.upper() == "4":
        print_slow("\n")
        print_slow("\n")
        print_slow("Tracking Nothern Slythern...")
        print_slow("\n")
        print_slow("\n")
        print_slow("You find it, lurking under a sand dune on the border of the city.")
        print_slow("\n")
        print_slow("\n")
        print_slow("Do you fight it?")
        print_slow("\n")
        print_slow("\n")
        print_slow("F. Fight the Slythern")
        print_slow("R. Return to The Dunes and come back later.")
        print_slow("\n")
        print_slow("\n")
        fightorflightslythern = input("Choice: ")

        if fightorflightslythern.upper() == "F":
            print_slow("\n")
            print_slow("\n")
            print_slow("You approach the Northern Slythern carefully.")
            fight_monster()

        if fightorflightslythern.upper() == "R":
            print_slow("\n")
            print_slow("\n")
            print_slow("You back off quietly, and return to The Dunes. To cancel a bounty go to where you accepted it and choose cancel.")
            the_dunes()

def fight_monster():
    if constants.TrackingNorthernSlyder_dunes == True:
        print_slow("\n")
        print_slow("\n")
        print_slow(" - NORTHERN SLYTHERN - ")
        print_slow("\n")
        print_slow("\n")
        print_slow("It sits back on its haunches and hisses at you.")
        print_slow("\n")
        print_slow("\n")
        print_slow("You have", constants.health, "health.")
        print_slow("\n")
        print_slow("\n")
        slythernhealth_random = random.randrange(100, 200)
        constants.northernslythernhealth += slythernhealth_random
        print_slow("The Northern Slythern has", constants.northernslythernhealth, "health.")
        print_slow("\n")
        print_slow("\n")
        print_slow("The Northern Slythern has a random chance of attacking, blocking attacks or nothing at all.")
        print_slow("\n")
        print_slow("\n")
        print_slow("If you attack at the same time the Northern Slythern will deal damage and you will too.")
        print_slow("\n")
        print_slow("\n")
        print_slow("Parrying can only be used twice per fight, it is a half percent chance of parrying the Slythern but if it")
        print_slow("is successful you can deal great amounts of damage.")
        print_slow("\n")
        print_slow("\n")
        print_slow("Retreating will cancel the bounty and cause you to lose 10 reputation.")
        fight_northernslythern()

def fight_northernslythern():
    print_slow("\n")
    print_slow("\n")
    print_slow("What will you do?")
    print_slow("\n")
    print_slow("\n")
    print_slow("1. Attack the Northern Slythern")
    print_slow("2. Parry Attack, you have", constants.parries, "left.")
    print_slow("3. Use Consumables")
    print_slow("4. Retreat")
    print_slow("\n")
    print_slow("\n")
    fighting_northernslythern = input("Choice: ")

    if fighting_northernslythern.upper() == "1":
        print_slow("\n")
        print_slow("\n")
        print_slow("You attack the Northern Slythern.")
        slythernmove_random = random.randrange(1, 8)
        if slythernmove_random <= 3:
            print_slow("\n")
            print_slow("\n")
            print_slow("The Slythern blocks your attack.")
            fight_northernslythern()
        elif slythernmove_random > 3:
            slythernmove_random = random.randrange(1, 6)
            if slythernmove_random <= 3:
                print_slow("\n")
                print_slow("\n")
                print_slow("You and the Slythern attack at the same time.")
                print_slow("\n")
                print_slow("\n")
                slytherndamage_random = random.randrange(15, 25)
                constants.health -= slytherndamage_random
                print_slow("The Slythern grazes you with its barbed tail.")
                print_slow("\n")
                print_slow("\n")
                print_slow("The Slythern dealt", slytherndamage_random, "damage to you.")
                print_slow("\n")
                print_slow("\n")
                print_slow("You now have", constants.health, "health.")
                damagetoslythern_random = random.randrange(15, 20)
                constants.northernslythernhealth -= damagetoslythern_random
                print_slow("\n")
                print_slow("\n")
                print_slow("At the same time you manage to weave close enough to strike its unprotected stomach.")
                print_slow("\n")
                print_slow("\n")
                print_slow("You dealt", damagetoslythern_random, "damage to the Slythern.")
                print_slow("\n")
                print_slow("\n")
                print_slow("The Slythern now has", constants.northernslythernhealth, "health.")
                if constants.northernslythernhealth <= 0:
                    print_slow("\n")
                    print_slow("\n")
                    constants.northernslythernhealth = 0
                    constants.TrackingNorthernSlyder_dunes = False
                    constants.KilledNorthernSlythern = True
                    constants.parries = 2
                    print_slow("In a split second your sword finds its way into the Slythern's heart and it falls dead at your feet, twitching and oozing blood.")
                    print_slow("\n")
                    print_slow("\n")
                    constants.health = 100
                    print_slow("You regain all health for emerging victorious.")
                    print_slow("\n")
                    print_slow("\n")
                    print_slow("To claim the gold go to any inn.")
                    the_dunes()
                elif constants.northernslythernhealth > 0:
                    fight_northernslythern()  
            elif slythernmove_random >= 4:
                print_slow("\n")
                print_slow("\n")
                print_slow("The Slythern fails to block or attack and you successfully damage it.")
                damagetoslythern_random = random.randrange(25, 35)
                constants.northernslythernhealth -= damagetoslythern_random
                print_slow("\n")
                print_slow("\n")
                print_slow("You dealt", damagetoslythern_random, "damage to the Slythern.")
                print_slow("\n")
                print_slow("\n")
                print_slow("You now have", constants.health, "health.")
                print_slow("\n")
                print_slow("\n")
                print_slow("The Slythern now has", constants.northernslythernhealth, "health.")
                if constants.northernslythernhealth <= 0:
                    print_slow("\n")
                    print_slow("\n")
                    constants.northernslythernhealth = 0
                    constants.TrackingNorthernSlyder_dunes = False
                    constants.KilledNorthernSlythern = True
                    constants.parries = 2
                    print_slow("In a split second your sword finds its way into the Slythern's heart and it falls dead at your feet, twitching and oozing blood.")
                    print_slow("\n")
                    print_slow("\n")
                    constants.health = 100
                    print_slow("You regain all health for emerging victorious.")
                    print_slow("\n")
                    print_slow("\n")
                    print_slow("To claim the gold go to any inn.")
                    the_dunes()
                elif constants.northernslythernhealth > 0:
                    fight_northernslythern()  
    
    if fighting_northernslythern.upper() == "2":
        if constants.parries > 0:
            print_slow("\n")
            print_slow("\n")
            print_slow("You ready yourself to parry an attack.")
            slythernattack_random = random.randrange(1, 2)
            if slythernattack_random == 1:
                print_slow("\n")
                print_slow("\n")
                print_slow("The Slythern attacks and you parry aside its claw, leaving its chest unprotected. You take a large swing.")
                print_slow("\n")
                print_slow("\n")
                print_slow("You dealt 50 damage to the Slythern.")
                constants.northernslythernhealth -= 50
                print_slow("\n")
                print_slow("\n")
                constants.parries -= 1
                print_slow("You have used 1 parry.")
                print_slow("\n")
                print_slow("\n")
                print_slow("You now have", constants.parries, "parries left.")
                print_slow("\n")
                print_slow("\n")
                print_slow("You now have", constants.health, "health.")
                print_slow("\n")
                print_slow("\n")
                print_slow("The Slythern now has", constants.northernslythernhealth, "health.")
                if constants.northernslythernhealth <= 0:
                    print_slow("\n")
                    print_slow("\n")
                    constants.northernslythernhealth = 0
                    constants.TrackingNorthernSlyder_dunes = False
                    constants.KilledNorthernSlythern = True
                    constants.parries = 2
                    print_slow("In a split second your sword finds its way into the Slythern's heart and it falls dead at your feet, twitching and oozing blood.")
                    print_slow("\n")
                    print_slow("\n")
                    constants.health = 100
                    print_slow("You regain all health for emerging victorious.")
                    print_slow("\n")
                    print_slow("\n")
                    print_slow("To claim the gold go to any inn.")
                    the_dunes()
                elif constants.northernslythernhealth > 0:
                    fight_northernslythern()  
            elif slythernattack_random == 2:
                print_slow("\n")
                print_slow("\n")
                print_slow("You ready yourself to parry an attack which never comes.")
                print_slow("\n")
                print_slow("\n")
                constants.parries -= 1
                print_slow("You have wasted 1 parry.")
                print_slow("\n")
                print_slow("\n")
                print_slow("You now have", constants.parries, "parries left.")
                print_slow("\n")
                print_slow("\n")
                print_slow("You now have", constants.health, "health.")
                print_slow("\n")
                print_slow("\n")
                print_slow("The Slythern now has", constants.northernslythernhealth, "health.")
                if constants.northernslythernhealth <= 0:
                    print_slow("\n")
                    print_slow("\n")
                    constants.northernslythernhealth = 0
                    constants.TrackingNorthernSlyder_dunes = False
                    constants.KilledNorthernSlythern = True
                    constants.parries = 2
                    print_slow("In a split second your sword finds its way into the Slythern's heart and it falls dead at your feet, twitching and oozing blood.")
                    print_slow("\n")
                    print_slow("\n")
                    constants.health = 100
                    print_slow("You regain all health for emerging victorious.")
                    print_slow("\n")
                    print_slow("\n")
                    print_slow("To claim the gold go to any inn.")
                    the_dunes()
                elif constants.northernslythernhealth > 0:
                    fight_northernslythern()  
        elif constants.parries <= 0:
            print_slow("\n")
            print_slow("\n")
            print_slow("You have no more parries!")
            fight_northernslythern()

    if fighting_northernslythern.upper() == "4":
        constants.TrackingNorthernSlyder_dunes = False
        print_slow("\n")
        print_slow("\n")
        print_slow("You back away in defeat as the Northern Slythern hisses and bears its fangs.")
        print_slow("\n")
        print_slow("\n")
        print_slow("Coward... you have", constants.health, "health.")
        print_slow("\n")
        print_slow("\n")
        constants.parries = 2
        constants.reputation += 10
        print_slow("You have damaged your reputation! Your reputation is now at", constants.reputation, ", if it exceeds 100 shopkeeps will refuse to deal with you!")
        the_dunes()

